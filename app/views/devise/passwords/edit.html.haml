- content_for :title do "Восстановить пароль" end
.row
  .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
    %h2 Изменить пароля
    .jumbotron
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .field
          = f.label :password, "New password"
          %br/
          = f.password_field :password, autofocus: true, autocomplete: "off", required: true
        .field
          = f.label :password_confirmation, "Confirm new password"
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", required: true
        .actions
          = f.submit "Изменить", class: 'ui button blue'
      = render "devise/shared/links"
