.grid
  .ui.stackable.four.column.grid.segment.piled
    .column.center.aligned.field
      = select_tag :city, options_for_select(@cities_selection, params[:city]), class: 'ui input selection'
    .column.center.aligned.field
      = select_tag :event_type, options_for_select(@event_types_selection, params[:type]), class: 'ui input selection'
    .column.center.aligned
      .input
        #search-date= date_select :date, ''
    .column.center.aligned
      %button#search-submit.ui.button.teal.mini= t('search_bar.submit')