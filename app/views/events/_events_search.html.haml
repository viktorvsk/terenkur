.grid
  .ui.stackable.four.column.grid.segment.piled
    .column.center.aligned.field
      = select_tag :city, options_for_select(@cities_selection.reverse, params[:city] || nil), class: 'ui input selection'
    .column.center.aligned.field
      = select_tag :event_type, options_for_select(@event_types_selection.reverse, params[:type] || nil), class: 'ui input selection'
    .column.center.aligned
      .input
        %input#search-date{ value: params[:date] }/
    .column.center.aligned
      %button#search-submit.ui.button.teal.mini= t('search_bar.submit')