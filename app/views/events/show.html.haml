- content_for :top_background_content do render 'top_background_content', event: @event end
- content_for :title do @event.name end

.row
  .col-sm-6
    .panel.panel-primary
      .panel-heading Описание события
      .panel-body
        - if images = @event.images.where.not(id: @event.images.first) and images.present?
          .col-sm-4
            - images.each do |image|
              = image_tag(image, class: 'img-responsive shadow-z-1')
          .col-sm-8
            = @event.display_content
        - else
          .col-sm-12
            = @event.display_content
  .col-sm-6
    .panel.panel-primary
      .panel-heading Подробности события
      .panel-body
        .col-xs-12
          Адрес:
          = @event.address