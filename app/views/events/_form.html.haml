.ui.grid
  .ui.column
    .ui.segment.form
      = form_for @event do |f|
        - if @event.errors.any?
          #error_explanation
            %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
            %ul
              - @event.errors.full_messages.each do |msg|
                %li= msg

        .field
          = f.label :name
          = f.text_field :name, class: 'input'
        .field
          = f.label :teaser
          = f.text_area :teaser, class: 'input'
        .field
          = f.label :images
          = render 'images', f: f
        .ui.column.right.aligned
          = f.submit (@event.persisted? ? 'Update Event' : 'Add Event'), class: 'ui button teal'
