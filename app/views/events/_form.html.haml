.row
  .col-xs-12
    .jumbotron
      = form_for @event do |f|
        - if @event.errors.any?
          #error_explanation.alert.alert-danger
            %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
            %ul
              - @event.errors.full_messages.each do |msg|
                %li= msg

        .form-group
          = f.label :name
          = f.text_field :name, class: 'form-control'

        .row
          .form-group.col-sm-4
            = f.label :date
            = f.text_field :date, class: 'form-control'
          .form-group.col-sm-4
            = f.label :event_type
            = f.select :event_type, options_for_select(EventType.all.map{ |e| [e.name, e.id] }), {}, class: 'form-control'
          .form-group.col-sm-4
            = f.label :city
            = f.select :city, options_for_select(City.all.map{ |e| [e.name, e.id] }), {}, class: 'form-control'
        .form-group
          = f.label :teaser
          = f.text_area :teaser, class: 'form-control'
        .form-group
          = f.label :content
          = f.cktext_area :content, class: 'form-control', :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini', language: 'ru'}
        .form-group
          = f.label :images
          = render 'images', f: f
        .text-right
          = link_to 'Add Image', '#', class: 'btn btn-primary image-adder'
          = f.submit (@event.persisted? ? 'Update Event' : 'Add Event'), class: 'btn btn-info'
